            background-repeat: no-repeat;
            height: 100vh;
            margin: 0;
            color: white;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.5);
        }

        .navbar-brand {
            color: white !important;
        }

        .nav-links {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .nav-link {
            color: white !important;
            margin: 0 15px;
            text-decoration: none;
            font-size: 18px;
        }

            .nav-link:hover {
                color: #ffc107 !important; /* Ajoutez !important pour assurer la priorité */
            }

        .logout-btn {
            margin-left: auto;
        }

        .masthead {
            height: 100vh;
            min-height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .masthead h1 {
                font-size: 3rem;
                margin: 0;
