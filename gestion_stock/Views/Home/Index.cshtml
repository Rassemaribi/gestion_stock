                font-size: 1.5rem;
                font-weight: 300;
                margin: 20px 0 40px;
            }

        .btn-primary {
            background-color: #ffc107;
            border-color: #ffc107;
            color: white;
        }

        .about-section {
            padding: 80px 0;
        }

        .projects-section {
            padding: 80px 0;
            background-color: #f8f9fa;
        }

        .signup-section {
            padding: 80px 0;
            background-color: rgba(0, 0, 0, 0.5);
        }

            .signup-section h2 {
                margin-bottom: 25px;
                color: white;
            }

        .form-signup {
            max-width: 500px;
            margin: 0 auto;
        }

        .contact-section {
            padding: 80px 0;
            background-color: #212529;
        }

        .footer {
            padding: 50px 0;
        }
