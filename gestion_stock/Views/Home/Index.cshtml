    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <style>
        body {
            background-image: url('https://img.freepik.com/vecteurs-libre/fond-brouillard-realiste_23-2149115272.jpg?w=996&t=st=1701893199~exp=1701893799~hmac=ef223cfc3936fa4eac3a2b6425943bdc139941d1e72ffe3ee7e684ff16966e72');
