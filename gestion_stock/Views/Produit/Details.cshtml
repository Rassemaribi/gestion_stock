@model gestion_stock.Models.Produit

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: url('https://img.freepik.com/vecteurs-libre/hexagone-fond-abstrait-texture-noire_206725-413.jpg?w=1060&t=st=1701897607~exp=1701898207~hmac=3b8922591111dd2fb2e2b2e48c2322cd26e7536b68940762ef1051b508b583aa');
            background-size: cover;
        }

        .custom-container {
            background-color: rgba(200, 200, 200, 0.8);
            padding: 30px;
            border-radius: 20px;
            color: black;
            width: 60%; /* Ajusté la largeur du conteneur */
            margin: auto;
            margin-top: 60px;
        }

        .custom-navbar {
            background-color: rgba(255, 255, 255, 0);
            color: #fff;
            padding: 0px;
            margin: auto;
            text-align: center;
            display: flex;
            justify-content: space-between;
        }

        .nav-links {
            display: flex;
            align-items: center;
        }

        .nav-link {
            color: #fff;
            margin: 0 15px;
            text-decoration: none;
            font-size: 18px;
        }

            .nav-link:hover {
                color: #ffc107;
            }

        .logout-btn {
            margin-left: auto;
        }

        .action-button {
            padding: 6px 12px;
            margin-right: 5px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }

        .edit-button {
            background-color: #28a745;
            color: #fff;
        }

        /* Style pour le titre */
        h1 {
            color: goldenrod;
            text-align: center; /* Centrer le texte */
            margin-bottom: 20px; /* Ajout de marge en bas */
        }
    </style>
</head>
<body>

    <div class="custom-navbar">
        <div class="nav-links">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
            <a class="nav-link" asp-area="" asp-controller="Client" asp-action="Index">Clients</a>
            <a class="nav-link" asp-area="" asp-controller="Produit" asp-action="Index">Produits</a>
            <a class="nav-link" asp-area="" asp-controller="Fournisseur" asp-action="Index">Fournisseurs</a>
            <a class="nav-link" asp-area="" asp-controller="Facture" asp-action="Index">Factures</a>
        </div>
        <form class="form-inline logout-btn" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </div>
    <hr />
    <div class="custom-container">
        <h1>Détails du Produit : </h1>
        <h2> @Html.DisplayFor(model => model.Nom)</h2>
        <h3>ID @Html.DisplayFor(model => model.ID)</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lib)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lib)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Prix)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Prix)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantite)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantite)
            </dd>
            <dt class="col-sm-2">
             Fournisseur
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Idservice)
            </dd>
        </dl>

     
            <a class="action-button edit-button" asp-action="Edit" asp-route-id="@Model?.ID">Modifier</a>
            <br />
            
            <a asp-action="Index">Retour à la liste</a>
        
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
