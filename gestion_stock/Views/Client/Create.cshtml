@model gestion_stock.Models.Client

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: url('https://img.freepik.com/vecteurs-libre/fond-noir-motif-clair-fond-noir_483537-4203.jpg?w=1060&t=st=1701898686~exp=1701899286~hmac=3f30b13991bcd8a7ed18717a7547dfdeeaef6e029b7a6e425bf71b2a4286a7bf');
            background-size: cover;
        }

        .custom-container {
            background-color: rgba(200, 200, 200, 0.8);
            padding: 20px;
            border-radius: 20px;
            color: black;
            width: 150%;
            margin: auto;
            margin-top: 40px;
        }

        .custom-navbar {
            background-color: rgba(255, 255, 255, 0); /* Le quatrième paramètre (0) contrôle la transparence du blanc */
            color: #fff;
            padding: 0px;
            margin: auto;
            text-align: center;
            display: flex;
            justify-content: space-between;
        }


        .nav-links {
            display: flex;
            align-items: center;
        }

        .nav-link {
            color: #fff;
            margin: 0 15px;
            text-decoration: none;
            font-size: 18px;
        }

            .nav-link:hover {
                color: #ffc107;
            }

        .logout-btn {
            margin-left: auto;
        }
    </style>
</head>
<body>

    <div class="custom-navbar">
        <div class="nav-links">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
            <a class="nav-link" asp-area="" asp-controller="Client" asp-action="Index">Clients</a>
            <a class="nav-link" asp-area="" asp-controller="Produit" asp-action="Index">Produits</a>
            <a class="nav-link" asp-area="" asp-controller="Fournisseur" asp-action="Index">Fournisseurs</a>
            <a class="nav-link" asp-area="" asp-controller="Facture" asp-action="Index">Factures</a>
        </div>
        <form class="form-inline logout-btn" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </div>

    <div class="col-md-4 ">
        <form asp-action="Create" class="custom-container">
                

                    <h2 class="mt-1">Créer un nouveau client</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nom" class="control-label">Nom</label>
                        <input asp-for="Nom" class="form-control" />
                       
                    </div>
                    <div class="form-group">
                        <label asp-for="Prenom" class="control-label">Prénom</label>
                        <input asp-for="Prenom" class="form-control" />
                       
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Adresse</label>
                        <input asp-for="Address" class="form-control" />
                   
                    </div>
                    <div class="form-group">
                        <label asp-for="Cin" class="control-label">CIN</label>
                        <input asp-for="Cin" class="form-control" />
                       
                    </div>
                    <div class="form-group">
                        <label asp-for="Tel" class="control-label">Téléphone</label>
                        <input asp-for="Tel" class="form-control" />
                       
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Créer</button>
                    </div>
                    <hr />
                        <div class="mt-1">
                            <a asp-action="Index">Retour à la liste</a>
                        </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>